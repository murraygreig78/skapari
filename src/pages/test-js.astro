---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="JavaScript Test - Skapari">
  <div class="wrapper">
    <header class="header">
      <Nav />
    </header>
    
    <section class="section" id="test">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <h1>JavaScript Functionality Test</h1>
            
            <!-- jQuery Test -->
            <div class="card mb-4">
              <div class="card-header">
                <h3>jQuery Test</h3>
              </div>
              <div class="card-body">
                <button id="jquery-test" class="btn btn-primary">Test jQuery</button>
                <div id="jquery-result" class="mt-3"></div>
              </div>
            </div>

            <!-- Bootstrap Test -->
            <div class="card mb-4">
              <div class="card-header">
                <h3>Bootstrap Test</h3>
              </div>
              <div class="card-body">
                <button class="btn btn-success" data-toggle="tooltip" data-placement="top" title="Bootstrap tooltip test">
                  Hover for Tooltip
                </button>
                <button class="btn btn-warning" data-toggle="modal" data-target="#testModal">
                  Open Modal
                </button>
              </div>
            </div>

            <!-- Svelte Component Test -->
            <div class="card mb-4">
              <div class="card-header">
                <h3>Svelte Component Test</h3>
              </div>
              <div class="card-body">
                <div id="svelte-test">
                  <p>If you see this, Svelte is not loading properly.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Bootstrap Modal -->
    <div class="modal fade" id="testModal" tabindex="-1" role="dialog" aria-labelledby="testModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="testModalLabel">Test Modal</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <p>This modal should open and close properly if Bootstrap JavaScript is working.</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <Footer />
</Layout>

<script>
  // Test jQuery functionality
  document.addEventListener('DOMContentLoaded', function() {
    if (typeof $ !== 'undefined') {
      $('#jquery-test').on('click', function() {
        $('#jquery-result').html('<div class="alert alert-success">jQuery is working! ✅</div>');
      });
      
      // Initialize Bootstrap tooltips
      $('[data-toggle="tooltip"]').tooltip();
      
      console.log('jQuery loaded successfully');
    } else {
      console.error('jQuery not loaded');
      $('#jquery-result').html('<div class="alert alert-danger">jQuery not loaded! ❌</div>');
    }
    
    // Test Bootstrap functionality
    if (typeof bootstrap !== 'undefined') {
      console.log('Bootstrap JavaScript loaded successfully');
    } else {
      console.error('Bootstrap JavaScript not loaded');
    }
  });
</script>

<style>
  .card {
    margin-bottom: 2rem;
  }
  .card-header {
    background-color: #f8f9fa;
  }
</style> 